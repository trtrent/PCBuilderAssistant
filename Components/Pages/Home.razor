@page "/"
@using Microsoft.AspNetCore.Components.Web

<PageTitle>PC Build Assistant - Home</PageTitle>

<div class="hero-section mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-primary mb-4">
                    Build Your Perfect PC
                </h1>
                <p class="lead mb-4">
                    Get personalized PC build recommendations powered by AI. Whether you're gaming, 
                    coding, or creating, we'll help you find the perfect components within your budget.
                </p>
                <div class="d-flex gap-3">
                    <a href="/questionnaire" class="btn btn-primary btn-lg">
                        <i class="fas fa-rocket me-2"></i>
                        Start Building
                    </a>
                    <button class="btn btn-outline-secondary btn-lg" @onclick="ScrollToFeatures">
                        <i class="fas fa-info-circle me-2"></i>
                        Learn More
                    </button>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <i class="fas fa-desktop display-1 text-primary opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="features-section" id="features">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold">Why Choose Our PC Build Assistant?</h2>
                <p class="lead text-muted">Powered by advanced AI and updated with the latest hardware information</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-brain fa-3x text-primary mb-3"></i>
                        <h4>AI-Powered Recommendations</h4>
                        <p class="text-muted">
                            Our advanced AI analyzes your needs and budget to recommend the perfect components 
                            that work together seamlessly.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-dollar-sign fa-3x text-success mb-3"></i>
                        <h4>Real-Time Pricing</h4>
                        <p class="text-muted">
                            Get up-to-date price estimates and find the best deals from popular retailers 
                            like Amazon, Newegg, and Micro Center.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-map-marker-alt fa-3x text-danger mb-3"></i>
                        <h4>Local Store Finder</h4>
                        <p class="text-muted">
                            Find nearby stores that carry your recommended components, making it easy 
                            to shop locally or online.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row g-4 mt-4">
            <div class="col-md-6">
                <div class="feature-card h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-download fa-3x text-info mb-3"></i>
                        <h4>Downloadable Build Guide</h4>
                        <p class="text-muted">
                            Export your PC build as a PDF or text file to share with friends or 
                            reference while shopping and building.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="feature-card h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-tools fa-3x text-warning mb-3"></i>
                        <h4>Assembly Instructions</h4>
                        <p class="text-muted">
                            Get detailed assembly tips, required tools, and step-by-step guidance 
                            to build your PC with confidence.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="cta-section bg-primary text-white py-5 mt-5">
    <div class="container text-center">
        <h2 class="display-6 fw-bold mb-3">Ready to Build Your Dream PC?</h2>
        <p class="lead mb-4">
            Answer a few questions about your needs and budget, and we'll create a personalized 
            build recommendation just for you.
        </p>
        <a href="/questionnaire" class="btn btn-light btn-lg">
            <i class="fas fa-play me-2"></i>
            Get Started Now
        </a>
    </div>
</div>

@code {
    private async Task ScrollToFeatures()
    {
        await JSRuntime.InvokeVoidAsync("scrollToElement", "features");
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
